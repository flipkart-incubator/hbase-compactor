<configuration>
    <contexts>
        <context>
            <clusterID>preprod-yak-testbed-ch2-zk-jn-1:2181,preprod-yak-testbed-ch2-zk-jn-2:2181,preprod-yak-testbed-ch2-zk-jn-3:2181:/hbase</clusterID>
            <tableName>table_1</tableName>
            <nameSpace>preprod_compaction</nameSpace>
            <startTime>12</startTime>
            <endTime>16</endTime>
            <profileID>base</profileID>
        </context>
    </contexts>
    <profiles>
        <profile>
            <profileID>base</profileID>
            <policies>
                <policy>
                    <name>com.flipkart.yak.policies.NaiveRegionSelectionPolicy</name>
                    <configurations>
                        <configuration>
                            <name>compactor.policy.max.parallel.compaction.per.server</name>
                            <value>2</value>
                        </configuration>
                        <configuration>
                            <name>compactor.policy.max.parallel.compaction.per.table</name>
                            <value>8</value>
                        </configuration>
                    </configurations>
                </policy>
                <policy>
                    <name>com.flipkart.yak.policies.TimestampAwareSelectionPolicy</name>
                </policy>
                <policy>
                    <name>com.flipkart.yak.policies.HadoopDiskUsageBasedSelectionPolicy</name>
                </policy>
            </policies>
            <aggregator>
                <name>com.flipkart.yak.aggregator.ChainReportAggregator</name>
                <configurations>
                    <configuration>
                        <name>aggregator.chain.policy.order</name>
                        <value>com.flipkart.yak.policies.TimestampAwareSelectionPolicy,com.flipkart.yak.policies.NaiveRegionSelectionPolicy,com.flipkart.yak.policies.HadoopDiskUsageBasedSelectionPolicy</value>
                    </configuration>
                </configurations>
            </aggregator>
        </profile>
    </profiles>
</configuration>
